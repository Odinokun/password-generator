extends ../_template

block variables
  - var title       = 'Password generator'
  - var description = 'Password generator'
  - var ogtitle     = 'Password generator'
  - var ogimage     = 'assets/img/social.jpg'

block content
  //begin content
  main.main
    //begin main__header
    header.main__header
      h1.main__title Password generator
    //end main__header
      
    //begin main__form
    .main__form
      form.form
        label.form__label.form__label--range
          span Password length (<i id='password-length'>10</i>)
          input(type='range' id='p-length' value='10')

        label.form__label.form__label--checkbox
          span Numbers
          input(type='checkbox' id='p-numbers' checked)

        label.form__label.form__label--checkbox
          span Lowercase
          input(type='checkbox' id='p-lowercase' checked)

        label.form__label.form__label--checkbox
          span Uppercase
          input(type='checkbox' id='p-uppercase')

        label.form__label.form__label--checkbox
          span Special characters
          input(type='checkbox' id='p-special')

        button Generate
    //end main__form
    //begin main__results
    .main__results
      ul(id='result' class='results')
        li jdhf^24OSJKKJ
        li jdhf^24OSJKKJ
        li jdhf^24OSJKKJ
        li jdhf^24OSJKKJ
        li jdhf^24OSJKKJ
    //end main__results
  //end content
